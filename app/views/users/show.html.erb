<div id="account-details" class="large-6 columns">		
	<div class="panel">
		<h2>
			<% if  @user == current_user %>
				Your accaunt details
			<% else %>
				Account details
			<% end %>
		</h2>
		
		<table width="100%">
			<tr>
				<td><strong>Name:</strong></td>
				<td><%= @user.name %></td>
			</tr>

			<tr>
				<td><strong>Email:</strong></td>
				<td><%= @user.email %></td>
			</tr>


			<tr>
				<td><strong>Account type:</strong></td>
				<td><%= @user.role %></td>
			</tr>
			
			<% if !@user.parent.nil? %>
				<tr>
					<td><strong>Parent:</strong></td>
					<td><%= @user.parent.name %></td>
				</tr>
			<% end %>
			
			<tr>
				<td colspan="2">
					<%= link_to "Update these details", edit_user_path(@user.id), :class => "success button radius" %>
				</td>
			</tr>	
		</table>
	</div>
</div>

<div id="activity-feed" class="large-6 columns">		
	<div class="panel disabled">
		<h2>Billing Information</h2>
		<div data-alert class="alert-box secondary radius">Billing is currently in development.</div>
	</div>

	<div class="panel">
		<h2>Latest activity</h2>
		<p>No activity found</p>	
	</div>
</div>