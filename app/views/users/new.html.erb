
<div class="large-8 columns large-centered">
<div class="panel">
<h1>Signup</h1>
<p>Please fill in the following fields to signup</p>

<%= form_for(@user) do |f| %>

<%= f.label :name %><br />
<%= f.text_field :name %>

<%= f.label :email %><br />
<%= f.text_field :email %>

<%= f.label :password %><br />
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Confirm your password" %><br />
<%= f.password_field :password_confirmation %>

<%= f.submit "Sign up", :class => "success button" %>

<% end %>

</div>
</div>

