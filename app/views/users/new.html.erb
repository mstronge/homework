
<div id="signup-panel" class="large-8 columns large-centered radius">
<div class="panel">
<h1>Signup</h1>
<p>Please fill in the following fields to signup</p>

<%= form_for(@user) do |f| %>

<%= render 'fields', :f => f %>

<div class="field-item">
<%= f.submit "Sign up", :class => "success button" %>
</div>

<% end %>

</div>
</div>

